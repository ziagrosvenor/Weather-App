article.comment-list
	h2 {{addTitle}}
	p(class="comment-content") {{addContent}}
form(ng-submit="postComment()" class="list-add-form module-page")
	label(for="name") Name
	input(type="text" ng-model="addTitle" id="name" class="input-flex border")
	label(for="commentText") Comment
	textarea(ng-model="addContent" id="addContent" class="input-flex border" placeholder="Your comment...")
		//- a(href="#/list")
	input(type="submit" class="btn btn-lg" value="Add Comment")
.footer
	.ui-options( menu-item class="menu-animation" ng-class="{'highlight':active, 'selected':select}" ng-mouseenter="active = true" ng-mouseleave="active = false")
		ul
			li(ng-repeat="item in menuItems")
				a(ui-sref="{{item.sref}}") {{item.title}}
		svg(ng-click="select = !select").ui-icon
			use(xlink:href="#menu-icon")