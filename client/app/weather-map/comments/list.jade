h2 There are {{comments.length}} comments.
.search-bar
	label(for="search") Search:
	input(type="text" ng-model="searchQuery" class="border" name="search" placeholder="Search comments")
	span
		a(ng-click="removeComments()" class="btn btn-sm" ) Remove Comments
.comments-ui
	a(ui-sref=".create") Add a Comment
	a(ui-sref=".search") Search Weather
article.comment-list(ng-animate="'animate'" ng-repeat="comment in comments | filter: searchQuery" class="module-page")
	label(class="list-select")
		input(type="checkbox" ng-model="comment.selected")
		h3.heading {{comment.title}}
	p(class="comment-content") {{comment.content}}
	a(href='#/edit/{{comments.indexOf(comment)}}' class="btn btn-sm") Edit Comment
