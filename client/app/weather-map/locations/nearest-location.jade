                td {{ localWeather.period[1].dayTime.windDir}} 
                td {{ localWeather.period[2].dayTime.windDir}} 
                td {{ localWeather.period[3].dayTime.windDir}} 
                td {{ localWeather.period[4].dayTime.windDir}}
            tr 
                td Wind Speed
                td {{ localWeather.period[0].dayTime.windSpeed}} 
                td {{ localWeather.period[1].dayTime.windSpeed}} 
                td {{ localWeather.period[2].dayTime.windSpeed}} 
