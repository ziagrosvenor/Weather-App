doctype html
html(ng-app="weatherApp")
	head
		title Weather App
		link(rel="stylesheet" href="./assets/css/global.css")
		link(rel="stylesheet" href="./assets/css/ng-slider.min.css")
	body
		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
		script(src="https://maps.googleapis.com/maps/api/js?sensor=false")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-resource.min.js")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-route.min.js")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-sanitize.min.js")
		script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-animate.min.js")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.14.2/TweenMax.min.js")
		script(src="/bower/lodash/dist/lodash.compat.js")
		script(src="/bower/angular-google-maps/dist/angular-google-maps.js")
		script(src="/bower/angular-ui-router/release/angular-ui-router.js")
		script(src="/assets/libs/ng-slider.js")
		script(src="/assets/libs/ng-slider.tmpl.min.js")
		script(src="/app/app.js")
		script(src="/app/common/models/comments-model.js")
		script(src="/app/common/models/weather-model.js")
		script(src="/app/weather-map/comments/create/create-comment.js")
		script(src="/app/weather-map/comments/update/update-comment.js")
		script(src="/app/weather-map/comments/locations/locations.js")
		script(src="/app/weather-map/comments/comments.js")
		script(src="/app/weather-map/weather-map.js")
		include ./assets/svg/search-icon.svg
		.page-wrapper
			section.weather-map(ui-view="weather-map")
			section.comments-list(ui-view="comments")
		script(src="//localhost:35729/livereload.js")