doctype
html(ng-app="eventsApp")
	include head
	body
		section(ng-controller="commentsController")
			form(action="/update/#{blogEntry.id}" method="post")
				label(for="title") title
				input(type="text" name="title" value="#{blogEntry.title}" id="title")
				label(for="content") content
				input(type="textarea" name="content" value="#{blogEntry.content}" id="content")
				input(type="submit" value="submit")