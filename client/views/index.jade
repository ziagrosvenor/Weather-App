doctype
html
	include head
	body
		section.page-wrapper
			each blogEntry in blogEntries
				article.post
					h2 #{blogEntry.title}
					p #{blogEntry.content}
					a(class="btn" href="/delete/#{blogEntry.id}") Delete
					a(class="btn" href="/edit/#{blogEntry.id}") Edit
			
			h2 Add Post
			form(action="/" method="post")
				label(for="title") title
				input(type="text" name="title" id="title")
				label(for="content") content
				input(type="textarea" name="content" id="content")
				input(type="submit" value="submit")

